<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".PrincActivity">

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/ttl_abrir_database"
        android:id="@+id/btAbrirDB"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="abreDataBase"
        android:layout_marginTop="27dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/ttl_tira_foto"
        android:id="@+id/btTiraFoto"
        android:onClick="tiraFoto"
        android:layout_below="@+id/btAbrirDB"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp" />

</RelativeLayout>